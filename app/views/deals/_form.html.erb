<%= form_with model: deal, url: category_deals_path, :html => {:class => 'form', :id => 'form' }  do |form| %>

       <div class="field">
        <%= form.text_field :name, autofocus: true, autocomplete: "text", placeholder: "Enter transaction name" %>
        <% deal.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div class="field">
        <%= form.number_field :amount, autofocus: true, placeholder: "Enter Amount" %>
        <% deal.errors.full_messages_for(:amount).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

       <div class="actions">
      <%= form.submit "Add", class: 'category-btn'%>
    </div>
<% end %>